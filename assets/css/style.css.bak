*{
	padding: 0px;
	margin: 0px;
	box-sizing: border-box;
}
a:link{
	text-decoration: none;
}
.text-center{
	text-align: center;	
}
.container{
	width: 1200px;
	margin: 0 auto;
	
}	
.head{
	margin: 40px 0px 40px 0px;
	color: #bb2733;
	font-weight: bold;
	font-size: 48px;
	font-family: 'Passion One', cursive;
	
}
.navbar{
	list-style: none;
	margin-bottom: 25px;
}
.navbar li{
	display: inline-block;
	margin: 0px 10px;
	
}
.navbar li a{
	font-size: 14px;
	padding: 5px;
	color: #424242;
	font-family: 'Open Sans', sans-serif;
}
.navbar li a.active,
.navbar li a:hover,
.navbar li a:focus,
.navbar li a:active{
	color: #bb2733;
}
.heroimg{
	padding-bottom: 30px;
}
.info h2{
	padding-bottom:13px;
	color: #be2230;
    font-size: 30px;
	line-height:22px
}
.info p{
	font-size:14px;
	color: #2e2e2e;
	text-align: justify;
	margin-bottom: 15px;
	
}